{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build with gcc",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-std=c99",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
